<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Авторизация</title>
    <link rel="stylesheet" href="css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/bootstrap-responsive.min.css"/>
    <link rel="stylesheet" href="css/style.css"/>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
</head>
<body>
<div id="logo">
</div>
<div id="page">
    <h3>Log in</h3>
    <form id="loginform" class="form-vertical" action="/auth" method="POST" onsubmit="">
        <p>Enter username and password to continue.</p>

        <div class="control-group">
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-user"></i></span> <input id="login" style='height: 29.5px'
                                                                                 placeholder="Username" type="text"
                                                                                 name="login"/>
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-lock"></i></span><input id="password" style='height: 29px'
                                                                                type="password" name="password"
                                                                                placeholder="Password"/>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <span id="message" class="pull-left" style="margin-right: 5px">User session: ${userState}</span>
            <span class="pull-right"><input id="submitLogin" type="submit" class="btn btn-inverse"
                                            value="Login"/></span>
        </div>
    </form>
    <h3>Registration</h3>
    <form id="registration-form" class="form-vertical" action="/newuser" method="POST" onsubmit="">
        <p>Enter username and password to continue.</p>

        <div class="control-group">
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-user"></i></span> <input id="login-registration" style='height: 29.5px'
                                                                                 placeholder="Username" type="text"
                                                                                 name="login"/>
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-lock"></i></span><input id="password-registration" style='height: 29px'
                                                                                type="password" name="password"
                                                                                placeholder="Password"/>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <span class="pull-right"><input id="submit-registration" type="submit" class="btn btn-inverse"
                                            value="Registration"/></span>
        </div>
    </form>

</div>
</body>
</html>


