<!DOCTYPE html>
<html>
<head>
    <title>Игра</title>
</head>
<body>
      Тут будет игра
</body>
<script>
    var KEYCODE_UP = 38;        //usefull keycode
    var KEYCODE_LEFT = 37;      //usefull keycode
    var KEYCODE_RIGHT = 39;     //usefull keycode
    var KEYCODE_DOWN = 40;     //usefull keycode


    var ws = new WebSocket("ws://0.0.0.0:8080/chat");

    ws.onopen = function() { alert("Connection opened...") };

    ws.onclose = function() { alert("Connection closed...") };

    ws.onmessage = function(evt) {
        alert('mes');
    };
    function handleKeyDown(e) {
    //cross browser issues exist
    if(!e) { var e = window.event; }
        switch(e.keyCode) {
            case KEYCODE_UP: ws.send('up'); return false;
            case KEYCODE_LEFT: ws.send('left'); alert('left'); return false;
            case KEYCODE_RIGHT: ws.send('right'); return false;
            case KEYCODE_DOWN: ws.send('down'); return false;
        }
    }
    window.addEventListener('keypress', handleKeyDown);
</script>
</html>